@model MyWeb.Models.Member

@{
    ViewData["Title"] = "Delete";
}


<div class="container">
    <main role="main" class="pb-3" style="font-size:larger">
        <h1>刪除</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Password)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Password)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="刪除" class="btn btn-danger" onclick="return confirm('確定刪除?')" /><br /><br />
                <a asp-action="Index"><i class="far fa-hand-point-left"></i>返回</a>
            </form>
        </div>
    </main>
</div>




