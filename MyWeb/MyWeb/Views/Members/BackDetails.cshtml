@model MyWeb.Models.Member

@{
    ViewData["Title"] = "個人資料";
}


<div class="container">
    <main role="main" class="pb-3" style="font-size:larger">
        <h1>個人資料</h1>

        <div>
            <hr />
            <dl class="row" style="font-size:larger">
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.Email
                </dd>
                <dt class="col-sm-2">
                    密碼
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.Password
                </dd>
                <dt class="col-sm-2">
                    姓名
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.UserName
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-outline-warning btn-lg" asp-action="Index"><i class="far fa-hand-point-left"></i>返回</a>
        </div>
    </main>
</div>





@section Scripts{
    <script>

        function LogoutCheck() {
                swal({
                    title: '確認登出?',
                    type: 'question',
                    showCancelButton: true,
                    cancelButtonText: '取消',
                    confirmButtonText: '確定',

                }).then(function () {

                        $.ajax({
                            type: 'POST',
                            url: "@Url.Action("Logout")",
                            contentType: "application/json;utf-8",
                            dataType: "json",
                            async: false,
                            success: function (result) {
                                location.href = "/Home/Index"; 

                            },
                            error: function () {
                                //location.href = "/Home/Index";
                            }
                        });
                });
        };
    </script>
}